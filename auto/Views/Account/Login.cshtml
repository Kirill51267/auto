@model auto.Models.LoginViewModel


<div class="LoginAndRegister">
<h2>Вход в приложение</h2>
<form method="post" asp-controller="Account" asp-action="Login"
      asp-route-returnUrl="@Model.ReturnUrl">
    <div class="LoginAndRegisterInner">
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <label asp-for="Email"></label><br />
        <input asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>
    <div>
        <label asp-for="Password"></label><br />
        <input asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>
    </div>
    <br/>
    <div>
        <input class="btn btn-sm btn-primary" type="submit" value="Войти" />
        <a asp-controller="Account" asp-action="Register" class="btn btn-sm btn-primary">Зарегистрироваться</a>
    </div>
</form>
</div>